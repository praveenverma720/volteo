<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eMainCV"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Employee Name"
            android:textColor="@color/text_color"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/eProfileCIV"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@color/text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eCourseTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Master of Technology"
                    android:textColor="@color/text_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/eCollegeNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BKBIET Pilani"
                    android:textColor="@color/text_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ePassingYearTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2017"
                    android:textColor="@color/text_color"
                    android:textSize="14dp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
